{
    "name":"Para2BOW",
    "description":"Converts a paragraph to a bag of words for NLP",
    "version":"0.0.1",
    "createdDate":"20190703",
    "model":{
        "framework":"Tensorflow",
        "tags":"serve",
        "signatureDefs":"def_signature"
    },
	"input": [
    {
		    "type": "string",
        "label":"paragraph"
    }
	],
	"structure": [
                  {
                    "operation":"tokenize",
                    "input":{"str":"$paragraph"},
                    "output":"words"
                  },
                  {
                    "operation":"removeStop",
                    "output":"nostop"
                  },
                  {
                    "operation":"apply",
                    "function":"stem",
                    "//comment":"Depends on how the function stem works",
                    "output":"stemwords"
                  },
                  {
                    "operation":"set",
                    "output":"set"
                  },
                  {
                    "operation":"apply",
                    "function":"count",
                    "output":"BOWmap"
                  }
             ],
	"output": {
    "type": "map",
    "data":{"BOW":"$BOWmap"}
	}
}
